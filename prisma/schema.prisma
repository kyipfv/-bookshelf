generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Book {
  id        String   @id @default(uuid())
  visitorId String
  title     String
  author    String
  genre     String   @default("Uncategorized")
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([visitorId])
}